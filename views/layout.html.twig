<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ app.request.basepath }}/css/style.css" rel="stylesheet">
    <link href="{{ app.request.basepath }}/css/custom.css" rel="stylesheet">
    <!-- Plugin pagination CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.4/pagination.css"/>
    <!-- jQuery -->
    <script src="{{ app.request.basepath }}/lib/jquery/jquery.min.js"></script>
    <!-- Pagination plugin -->
    <script src="{{ app.request.basepath }}/lib/paginationJS/pagination.js"></script>
    <!-- JavaScript Boostrap plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>
    <title>Watson - {% block title %}{% endblock %}</title>
</head>
<body>
    <!-- container -->
    <div class="container">
        <!-- global navbar -->
        <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
            <!-- container content -->
            <div class="container">
                <!-- navbar header - name and other things -->
                <div class="navbar-header">
                    <div class="nav-content_custom customSpace">
                        <h1><a class="navbar-brand" id="logo" href="{{ path('home') }}">WATSONÂ²</a></h1>
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                            <span class="glyphicon glyphicon-menu-hamburger"></span>
                        </button>
                    </div>
                </div>
                <!-- navbar side -->
                <div class="collapse navbar-collapse" id="navbar-collapse-target">
                    <ul class="nav navbar-nav navbar-right nav-content_custom">
                            <!-- Links -->
                            <li><a href="{{ path('all_links') }}"><span class="glyphicon glyphicon-link"></span> Links</a></li>
                            <!-- Flux RSS -->
                            <li><a href="{{ path('rss') }}" target="_blank"><span class="glyphicon glyphicon-link"></span> RSS</a></li>
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <!-- Administration -->
                            <li class="{% if adminMenu is defined %}active{% endif %}"><a href="{{ path('admin') }}"><span class="glyphicon glyphicon-cog"></span> Administration</a></li>
                        {% endif %}
                        {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Welcome, {{ app.user.username }} <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('logout') }}">Logout</a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li><a href="{{ path('login') }}"><span class="glyphicon glyphicon-user"></span> Login</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div><!-- /.container -->
        </nav>
        <div id="content">{% block content %}{% endblock %}</div>
        <footer class="footer">
            Watson - Made with love by CvTIC and his students
            
        </footer>
    </div>
</body>
</html>
